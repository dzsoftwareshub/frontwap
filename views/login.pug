div.modal#login-modal.animate__animated.animate__zoomIn
  div.modal-dialog.modal-lg.modal-dialog-centered
    div.modal-content
      div.modal-body.py-4.px-4
        div.row
          div.col-md-6
            img(src="images/signup.svg" width="100%")
            
          div.col-md-6
            h1.display-4(style="font-size:30px;") Welcome User !
            form
                
              div.form-group.mt-4
                input.form-control(type="email" name="email" placeholder="Email")
                
              div.form-group
                input.form-control(type="password" name="password" placeholder="password")
                
              div.form-group
                button.btn.btn-primary(type="submit") Login
              
              p New User? 
                a.request-signup-modal(href="#") Create An account
